#Content app
from django.db import models

#Each page stored in a database so that users can add more pages easily
class Page(models.Model):

	
		
	slug = models.SlugField(max_length=200)
	pub_date = models.DateField('Date published')
	CONTENT_TYPE_CHOICES = (
        ( 'P', 'Page'),
        ( 'U','Update'),
        ( 'C','CEPHIA Update'), )
	content_type = models.CharField(max_length=1, choices=CONTENT_TYPE_CHOICES)
	
	def __unicode__(self):
		return self.ident
	
	#Optional fields that should only be filled in when entering an update. Text and image. 
	update_html_content = models.TextField(max_length=3000, null=True, blank=True)
	update_html_image = models.FileField(upload_to="page/static/page/uploads", null=True,blank=True)
	
class Tags(models.Model):
    